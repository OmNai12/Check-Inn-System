<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="006" author="your_name">
        <createTable tableName="client_property">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="property_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="property_image" type="BLOB"/>
            <column name="number_ofrooms" type="INT"/>
            <column name="available_room_types" type="TEXT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
